<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.ShopAccountMapper">

    <resultMap id="shopAccountMapper" type="com.tencent.wxcloudrun.model.ShopAccount">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="address" column="address"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="area" column="area"/>
        <result property="createdAt" column="createdAt" javaType="java.time.LocalDateTime" />
        <result property="updatedAt" column="updatedAt" javaType="java.time.LocalDateTime"  />
    </resultMap>

    <select id="getById" resultMap="shopAccountMapper" parameterType="com.tencent.wxcloudrun.model.ShopAccount">
        SELECT `id`, `name`, `phone`, `email`, `address`, `province`, `city`, `area`, `createTime`, `updateTime`
        FROM shop_account
        WHERE phone = #{phone} and password = #{password}
    </select>

